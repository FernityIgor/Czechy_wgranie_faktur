# ===========================================
# FLEXIBEE API CONFIGURATION
# ===========================================
FLEXIBEE_API_URL=https://twoja-domena.flexibee.eu:5434
FLEXIBEE_API_PORT=5434
FLEXIBEE_COMPANY_ID=twoja_firma
FLEXIBEE_USERNAME=twoj_login
FLEXIBEE_PASSWORD=twoje_haslo

# ===========================================
# SQL SERVER DATABASE CONFIGURATION
# ===========================================
DB_SERVER=192.168.x.x,1433
DB_DATABASE=nazwa_bazy
DB_USERNAME=uzytkownik
DB_PASSWORD=haslo

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Tryb testowy (true = nie zapisuje do Flexibee, tylko testuje)
DRY_RUN=true

# Logowanie requestów
LOG_REQUESTS=true
LOG_FILE=logs/api_requests.log

# Timezone
TIMEZONE=Europe/Warsaw

# ===========================================
# INVOICE MAPPING
# ===========================================
# Domyślny typ faktury w Flexibee
DEFAULT_INVOICE_TYPE=code:FAKTURA

# Domyślna forma płatności
DEFAULT_PAYMENT_METHOD=code:PŘEVODEM

# Prefix dla zewnętrznych ID (unikalne identyfikatory)
EXTERNAL_ID_PREFIX=FURNIZONE_

# Domyślne konto bankowe (opcjonalne)
DEFAULT_BANK_ACCOUNT=
